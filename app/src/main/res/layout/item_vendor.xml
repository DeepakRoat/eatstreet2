<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/vendor_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/no_image"
            android:layout_marginEnd="12dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vendor_name"
                android:text="Vendor Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/vendor_category"
                android:text="Category"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/vendor_veg_status"
                android:text="Veg/Non-Veg"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/vendor_hygiene"
                android:text="Hygiene: 4.5"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/vendor_verified"
                android:text="âœ” Verified"
                android:textSize="12sp"
                android:textColor="@android:color/holo_green_dark"
                android:visibility="gone"/>

            <RatingBar
                android:id="@+id/vendor_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:isIndicator="true"
                android:rating="4.0" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
